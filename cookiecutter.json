{
    "project_name": "Name of the project (e.g. 'Workforce One')",
    "project_slug": "{{ cookiecutter.project_name.lower().replace(' ', '-') }}",
    "project_short_description": "A short description of the project",
    "first_name": "Your first name",
    "last_name": "Your last name",
    "email": "{{ cookiecutter.first_name.lower() }}.{{ cookiecutter.last_name.lower() }}@invisible.email",
    "tests": {
        "description": "Select test types",
        "type": "enum",
        "choices": [
            {
                "key": "X",
                "label": "No tests"
            },
            {
                "key": "U",
                "label": "Unit tests (Vitest)"
            },
            {
                "key": "I",
                "label": "Integration tests (Vitest)"
            },
            {
                "key": "E",
                "label": "E2E/API/Browser tests (Checkly)"
            },
            {
                "key": "UI",
                "label": "Unit + Integration"
            },
            {
                "key": "UE",
                "label": "Unit + E2E/API"
            },
            {
                "key": "IE",
                "label": "Integration + E2E/API"
            },
            {
                "key": "UIE",
                "label": "All tests"
            }
        ]
    },
    "release_date": "{% now 'local' %}",
    "_copy_without_render": [
        "node_modules/**",
        "bun.lock"
    ]
}